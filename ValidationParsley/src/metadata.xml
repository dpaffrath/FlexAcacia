	<metadata name="Size"  description="Allow you to validate that a string agaisnt a regexp" >
		<context name="variable" />
		<context name="getter" />
		<context name="setter" />
		<attribute name="min" type="String" showHint="false"  required="false"/>
		<attribute name="max" type="String" showHint="false"  required="false"/>
		<attribute name="tooLongError"  type="String" showHint="false"  required="false" />
		<attribute name="tooShortError"  type="String" showHint="false"  required="false" />
		<attribute name="errorMessage" type="String" showHint="false"  required="false"/>
	</metadata>
</annotations>


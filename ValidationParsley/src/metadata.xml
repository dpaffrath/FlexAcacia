		<context name="setter" />
		<attribute name="min" type="String" showHint="false"  required="true"/>
		<attribute name="errorMessage" type="String" showHint="false"  required="false"/>
	</metadata>
	
	<metadata name="NotNull"  description="Allow you to validate that a property is not null or empty" >
		<context name="variable" />
		<context name="getter" />
		<context name="setter" />
		<attribute name="strict" type="String" showHint="false"  required="false"/>
		<attribute name="errorMessage" type="String" showHint="false"  required="false"/>
	</metadata>
	
	<metadata name="Null"  description="Allow you to validate that a property is null or empty" >

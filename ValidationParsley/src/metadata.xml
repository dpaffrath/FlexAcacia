<?xml version="1.0" encoding="utf-8"?>
<annotations version="1.0">
	
	
	<metadata name="Assert" description="Allow you to validate an object against an expression that will be evaluated in context of the validation target" >
		<context name="class">
			<attribute name="field" type="String" showHint="false"  required="true"
				description="name of the constraint (required)" />
			<attribute name="expression" type="String" showHint="false"  required="true"
				description="expression to be evaluated" />
			<attribute name="errorMessage" type="String" showHint="false"  required="true"
				description="Error message" />
		</context>
	</metadata>
	
	<metadata name="Email"  description="Allow you to validate that a property have a valid email address format" >
		<context name="variable" />
		<context name="getter" />
		<context name="setter" />
		<attribute name="invalideCharError" type="String" showHint="false"  required="false"/>
		<attribute name="invalidDomainError" type="String" showHint="false"  required="false"/>
		<attribute name="invalidIPDomainError" type="String" showHint="false"  required="false"/>
		<attribute name="missingAtSignError" type="String" showHint="false"  required="false"/>
		<attribute name="missingPeriodInDomainError" type="String" showHint="false"  required="false"/>
		<attribute name="missingUsernameError" type="String" showHint="false"  required="false"/>
		<attribute name="tooManyAtSignsError" type="String" showHint="false"  required="false"/>
	</metadata>
	

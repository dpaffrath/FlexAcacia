		<context name="variable" />
		<context name="getter" />
		<context name="setter" />
		<attribute name="strict" type="String" showHint="false"  required="false"/>
		<attribute name="includeTime" type="String" showHint="false"  required="false"/>
		<attribute name="errorMessage" type="String" showHint="false"  required="false"/>
	</metadata>
	
	<metadata name="Past"  description="Allow you to validate that a property have a date property is in the past" >
		<context name="variable" />
		<context name="getter" />
		<context name="setter" />
		<attribute name="strict" type="String" showHint="false"  required="false"/>
		<attribute name="includeTime" type="String" showHint="false"  required="false"/>
		<attribute name="errorMessage" type="String" showHint="false"  required="false"/>
	</metadata>
	

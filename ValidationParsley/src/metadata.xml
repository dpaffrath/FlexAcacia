		<context name="variable" />
		<context name="getter" />
		<context name="setter" />
		<attribute name="max" type="String" showHint="false"  required="true"/>
		<attribute name="errorMessage" type="String" showHint="false"  required="false"/>
	</metadata>
	
	<metadata name="Min"  description="Allow you to validate that a number is not lower than a minimum" >
		<context name="variable" />
